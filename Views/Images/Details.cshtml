@using ImageSharingWithCloud.Controllers

@model ImageSharingWithCloud.Models.ImageView

@{
    ViewBag.Title = "Image Details";
}
<style>
    .fixedSizeImage {
        width: 300px;
        height: auto;
    }
</style>
<h2>@ViewBag.Title</h2>

<p><img src="@Model.Uri" class="fixedSizeImage" /></p>

<p>Image id: @Model.Id</p>

<p>Caption: @Model.Caption</p>

<p>Description: <br />@Model.Description</p>

<p>Date taken: @Model.DateTaken.ToShortDateString()</p>

<p>Uploader: @Model.UserName</p>